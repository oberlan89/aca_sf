{% extends 'base.html.twig' %}
{% block title %}Unidades{% endblock %}

{% block body %}
    <div class="aca-surface p-3 p-md-4">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h1 class="h4 m-0">Unidades</h1>
            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-aca-primary btn-sm" href="{{ path('app_unit_new') }}">
                    + Nueva
                </a>
            {% endif %}
        </div>

        <div class="row g-3">
            {% for u in units %}
                <div class="col-12 col-lg-6">
                    {{ include('unit/_unit_card.html.twig', { u: u }) }}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
