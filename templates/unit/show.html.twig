{% extends 'base.html.twig' %}

{% block title %}Unit{% endblock %}

{% block body %}
    <h1>Unit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ unit.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ unit.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ unit.name }}</td>
            </tr>
            <tr>
                <th>IsGenerating</th>
                <td>{{ unit.isGenerating ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('UNIT_EDIT') %}
        <a href="{{ path('app_unit_index') }}">back to list</a>
    {% endif %}

    {% if is_granted('UNIT_DELETE') %}
        <a href="{{ path('app_unit_edit', {'id': unit.id}) }}">edit</a>
    {% endif %}

    {{ include('unit/_delete_form.html.twig') }}
{% endblock %}
