{% set prefix = prefix|default('r') %}

<div class="row g-3">
    {% for u in units %}
        <div class="col-12 col-lg-6">
            <div class="aca-card p-3">
                <div class="d-flex justify-content-between align-items-start gap-3">
                    <div class="flex-grow-1">
                        <a class="aca-unit-name text-decoration-none"
                           href="{{ path('app_unit_show', { id: u.id }) }}">
                            {{ u.name }}
                        </a>

                        <div class="aca-unit-code">{{ u.code }}</div>

                        <div class="mt-2 d-flex gap-2 flex-wrap">
                            {% if u.team %}<span class="badge aca-badge">Equipo {{ u.team.number }}</span>{% endif %}
                            {% if u.subfondo %}<span class="badge text-bg-light border">{{ u.subfondo.name }}</span>{% endif %}
                        </div>
                    </div>

                    {% if hasChildren[u.id] ?? false %}
                        <button class="btn btn-sm btn-aca-secondary"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#children-{{ prefix }}-{{ u.id }}"
                                aria-controls="children-{{ prefix }}-{{ u.id }}"
                                aria-expanded="false">
                            Subramas
                        </button>
                    {% endif %}
                </div>

                {% if hasChildren[u.id] ?? false %}
                    <div class="collapse mt-3 js-unit-children"
                         id="children-{{ prefix }}-{{ u.id }}"
                         data-url="{{ path('app_unit_children', { id: u.id }) }}">
                        <div class="border rounded-3 p-2 bg-light">
                            <div class="js-children-container" data-loaded="0">
                                <div class="aca-label">Expande para cargarâ€¦</div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    {% else %}
        <div class="col-12">
            <div class="aca-label">Sin resultados.</div>
        </div>
    {% endfor %}
</div>
