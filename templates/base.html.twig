<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}ACA{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {# IMPORTANT with Turbo to avoid “works only after refresh” #}
    <meta name="turbo-cache-control" content="no-cache">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}

    {# Load Bootstrap once (defer so it doesn't block rendering) #}
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    {# Load your importmap ONCE, in the head #}
    {% block javascripts %}
        {{ importmap('app') }}
    {% endblock %}
</head>

<body>
<header class="aca-topbar">
    <div class="container-fluid px-3 px-lg-4 py-2 d-flex align-items-center justify-content-between gap-3">

        <div class="d-flex align-items-center gap-2">
            {% if app.user %}
                <button class="btn btn-sm aca-icon-btn" type="button"
                        data-bs-toggle="offcanvas" data-bs-target="#acaSidebar" aria-controls="acaSidebar">
                    <i class="fa-solid fa-bars"></i>
                </button>
            {% endif %}

            <a class="text-decoration-none d-flex align-items-center gap-2" href="{{ path('app_home') }}">
                <img src="{{ asset('images/logo_edomex.png') }}" alt="EDOMEX" style="height:52px;">
            </a>
        </div>

        {% if app.user %}
            <form class="d-none d-md-flex" method="get" action="{{ path('app_home') }}" style="max-width:520px; width:100%;">
                <input type="hidden" name="page" value="1">
                <input class="form-control" type="search" name="q" placeholder="Buscar..." value="{{ app.request.query.get('q') }}">
            </form>
        {% endif %}

        <div class="d-flex align-items-center gap-3">
            {% if app.user %}
                <a class="text-decoration-none" href="{{ path('app_home') }}">Inicio</a>

                <div class="dropdown">
                    <a class="text-decoration-none d-flex align-items-center gap-2 dropdown-toggle"
                       href="#" role="button" data-bs-toggle="dropdown">
                        <span class="badge text-bg-warning">PA</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><span class="dropdown-item-text">{{ app.user.email }}</span></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="{{ path('app_logout') }}">Cerrar sesión</a></li>
                    </ul>
                </div>
            {% else %}
                <a class="btn btn-sm btn-light" href="{{ path('app_login') }}">
                    <i class="fa-solid fa-right-to-bracket"></i> Entrar
                </a>
            {% endif %}
        </div>
    </div>
</header>

{% if app.user %}
    {% include '_sidebar.html.twig' %}
{% endif %}

<main class="container-fluid px-3 px-lg-4 py-4">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} mb-3">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}
</main>
</body>
</html>
